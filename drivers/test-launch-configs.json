{
    "serial": {
        "format": "{exec_path} {args}",
        "params": [{}]
    },
    "omp": {
        "format": "srun -N 1 -n 1 -c {num_threads} {exec_path} {args} {num_threads}",
        "params": [
            {"num_threads": 1},
            {"num_threads": 2},
            {"num_threads": 4}
        ]
    },
    "mpi": {
        "format": "srun -n {num_procs} {exec_path} {args}",
        "params": [
            {"num_procs": 1},
            {"num_procs": 2},
            {"num_procs": 4}
        ]
    },
    "mpi+omp": {
        "format": "srun -n {num_procs} -c {num_threads} {exec_path} {args} {num_threads}",
        "params": [
            {"num_procs": 1, "num_threads": 1},
            {"num_procs": 1, "num_threads": 2},
            {"num_procs": 2, "num_threads": 1},
            {"num_procs": 2, "num_threads": 2}
        ]
    },
    "kokkos": {
        "format": "srun -N 1 -n 1 -c {num_threads} {exec_path} {args} --kokkos-threads={num_threads}",
        "params": [
            {"num_threads": 1},
            {"num_threads": 2},
            {"num_threads": 4}
        ]
    },
    "cuda": {
        "format": "srun -n 1 {exec_path} {args}",
        "params": [{}]
    }
}